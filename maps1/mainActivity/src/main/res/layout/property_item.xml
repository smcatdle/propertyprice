<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/property_item"
    android:layout_width="match_parent"
    android:layout_height="350px"
    android:background="#FFF5FAED"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <TableRow
            android:id="@+id/tableRow_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#80F5FAED" >

            <ImageView
                android:id="@+id/marker_window_image"
                android:layout_width="350px"
                android:layout_height="350px"
                android:adjustViewBounds="false" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="#80F5FAED" >

                    <TextView
                        android:id="@+id/address_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#80F5FAED"
                        android:ems="10"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <TableLayout>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="#80F5FAED" >

                    <TextView
                        android:id="@+id/price_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#80F5FAED"
                        android:ems="10"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="#80F5FAED" >

                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#80F5FAED"
                        android:ems="10"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="#80F5FAED" >

                    <Button
                        android:id="@+id/streetmap_property_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textSize="12dp" />
                </TableRow>
                                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="#80F5FAED" >

                    <Button
                        android:id="@+id/map_property_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textSize="12dp" />
                </TableRow>
                
                                                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="#80F5FAED" >

                    <Button
                        android:id="@+id/save_property_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textSize="12dp" />
                </TableRow>
            </TableLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>